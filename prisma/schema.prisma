generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(cuid())
  email         String     @unique
  username      String     @unique
  password      String?
  fullName      String?
  cnpj          String?
  birthDate     DateTime?
  isAdmin       Boolean    @default(false)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  
  // Stack Auth integration
  stackUserId   String?    @unique
  stackUser     StackUser? @relation(fields: [stackUserId], references: [id])
  
  stores        Store[]
  apis          UserAPI[]

  @@map("users")
}

model Store {
  id          String      @id @default(cuid())
  name        String
  address     String?
  phone       String?
  cnpj        String?
  isActive    Boolean     @default(true)
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  salesData   SalesData[]

  @@map("stores")
}

model SalesData {
  id              String       @id @default(cuid())
  storeId         String
  store           Store        @relation(fields: [storeId], references: [id], onDelete: Cascade)
  date            DateTime
  totalSales      Float
  totalOrders     Int
  averageTicket   Float
  uniqueCustomers Int
  createdAt       DateTime     @default(now())
  topProducts     TopProduct[]

  @@map("sales_data")
}

model TopProduct {
  id        String    @id @default(cuid())
  salesId   String
  salesData SalesData @relation(fields: [salesId], references: [id], onDelete: Cascade)
  name      String
  quantity  Int
  revenue   Float

  @@map("top_products")
}

model UserAPI {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  type      String
  apiKey    String
  baseUrl   String?
  status    String   @default("disconnected")
  // Saipos specific integration controls
  storeId   String   // Formato: store_${id} - gerado automaticamente
  enabled   Boolean  @default(false)
  isSyncing Boolean  @default(false)
  lastTest  DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamento com dados agregados di√°rios (sales_daily)
  salesDaily SalesDaily[]

  @@map("user_apis")
  @@index([type, enabled])
}

model StackUser {
  id                      String    @id @default(uuid())
  primaryEmail            String?   @unique
  primaryEmailVerified    DateTime?
  createdAt               DateTime  @default(now())
  lastActiveAt            DateTime  @default(now())
  profileImageUrl         String?
  displayName             String?
  
  // Relation to internal User
  userId                  String?
  user                    User?

  @@map("stack_users")
}

model StackAuth {
  id                String    @id @default(uuid())
  stackUserId       String
  createdAt         DateTime  @default(now())
  userId            String?

  @@map("stack_auths")
}

model StackSession {
  id          String   @id @default(uuid())
  stackUserId String
  expiresAt   DateTime
  createdAt   DateTime @default(now())

  @@map("stack_sessions")
}

model SalesDaily {
  id          String   @id @default(cuid())
  apiId       String
  api         UserAPI  @relation(fields: [apiId], references: [id])
  storeId     String
  date        DateTime
  totalOrders Int
  totalSales  Decimal  @db.Decimal(12, 2)
  channels    Json?

  createdAt   DateTime @default(now())

  @@unique([apiId, date], name: "sales_daily_api_date_unique")
  @@index([apiId, date])
  @@map("sales_daily")
}

/// Raw sale records fetched from Saipos for auditability and downstream processing
model Sale {
  id             String   @id @default(cuid())
  externalId     String
  storeId        String
  userId         String
  saleDateUtc    DateTime
  totalAmount    Decimal? @db.Decimal(12, 2)
  rawJson        Json
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([storeId, externalId])
  @@index([userId, storeId, saleDateUtc])
  @@map("sales")
}

/// Sync runs bookkeeping
model SyncRun {
  id                String   @id @default(cuid())
  userApiId         String
  storeId           String?
  status            String   // running | success | error
  startPeriod       DateTime
  endPeriod         DateTime
  syncedCount       Int      @default(0)
  errorsCount       Int      @default(0)
  totalRequests     Int      @default(0)
  totalRecordsRaw   Int      @default(0)
  totalAfterFilter  Int      @default(0)
  lastUrl           String?
  startedAt         DateTime @default(now())
  endedAt           DateTime?

  pages             SalesRawPage[]
  errors            SyncError[]

  @@index([userApiId, status])
  @@index([storeId, startedAt])
  @@map("sync_runs")
}

model SyncError {
  id          String   @id @default(cuid())
  syncRunId   String
  message     String
  payloadPreview String?
  createdAt   DateTime @default(now())

  run         SyncRun  @relation(fields: [syncRunId], references: [id], onDelete: Cascade)

  @@index([syncRunId, createdAt])
  @@map("sync_errors")
}

model SalesRawPage {
  id          String   @id @default(cuid())
  syncRunId   String
  pageIndex   Int
  payload     Json
  createdAt   DateTime @default(now())

  run         SyncRun  @relation(fields: [syncRunId], references: [id], onDelete: Cascade)

  @@unique([syncRunId, pageIndex])
  @@index([syncRunId])
  @@map("sync_raw_pages")
}

model SalesRaw {
  id        String   @id @default(cuid())
  storeId   String
  period    Json
  payload   Json
  createdAt DateTime @default(now())

  @@map("sales_raw")
}