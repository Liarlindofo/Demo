# SendGrid API Key (Opção 1)
# Obtenha sua chave em: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Email de envio SendGrid (deve ser verificado no SendGrid)
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Resend API Key (Opção 2 - Gratuito)
# Obtenha sua chave em: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# Next.js
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database URL (PostgreSQL) - Opcional
DATABASE_URL=postgresql://username:password@localhost:5432/drin_platform

